<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Header with Menu Title -->
    <LinearLayout
        android:id="@+id/menuHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/menu_header_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:minHeight="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_fork_knife"
            android:tint="@color/text_white"
            android:contentDescription="Menu Icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="Menu"
            android:textColor="@color/text_white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />
    </LinearLayout>

    <!-- Categories List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menuCategoriesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/background_light"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/menuItemsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuHeader"
        app:layout_constraintHeight_percent="0.35" />

    <!-- Menu Items Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuItemsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/background_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuCategoriesRecyclerView">

        <!-- Menu Items Title -->
        <TextView
            android:id="@+id/menuItemsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/background_light"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingTop="16dp"
            android:paddingEnd="20dp"
            android:paddingBottom="16dp"
            android:text="Menu Items"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Menu Items RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menuItemsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuItemsTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
