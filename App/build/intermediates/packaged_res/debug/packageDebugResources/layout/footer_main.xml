<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/footer_border"
    android:orientation="vertical"
    android:padding="24dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray"
        android:orientation="vertical"
        android:padding="24dp">

    <!-- Logo Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:textColor="@color/text_primary"
            android:textSize="36sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/border_medium"
            android:paddingStart="6dp"
            android:paddingTop="4dp"
            android:paddingEnd="6dp"
            android:paddingBottom="4dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".U"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineHeight="16sp"
                android:includeFontPadding="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineHeight="16sp"
                android:includeFontPadding="false" />
        </LinearLayout>
    </LinearLayout>

    <!-- App Download Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/appStoreButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_black"
            android:drawableStart="@drawable/ic_app_store"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:minHeight="48dp"
            android:padding="12dp"
            android:text="Download on the App Store"
            android:textColor="@color/text_white"
            android:textSize="11sp" />

        <Button
            android:id="@+id/googlePlayButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_black"
            android:drawableStart="@drawable/ic_google_play"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:minHeight="48dp"
            android:padding="12dp"
            android:text="GET IT ON Google Play"
            android:textColor="@color/text_white"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Company Info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Company # 490039-445, Registered with House of companies."
        android:textColor="@color/text_secondary"
        android:textSize="12sp" />

    <!-- Email Subscription Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="Get Exclusive Deals in your Inbox"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/email_input_background"
            android:hint="youremail@gmail.com"
            android:inputType="textEmailAddress"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="14sp" />

        <Button
            android:id="@+id/subscribeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_orange"
            android:minWidth="100dp"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:text="Subscribe"
            android:textColor="@color/text_white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Email Policy -->
    <TextView
        android:id="@+id/emailPolicyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="we wont spam, read our email policy"
        android:textColor="@color/text_secondary"
        android:textSize="12sp" />

    <!-- Social Media Icons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/facebookButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/social_icon_outline"
            android:contentDescription="Facebook"
            android:src="@drawable/ic_facebook"
            android:tint="@color/text_primary" />

        <ImageButton
            android:id="@+id/instagramButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/social_icon_outline"
            android:contentDescription="Instagram"
            android:src="@drawable/ic_instagram"
            android:tint="@color/text_primary" />

        <ImageButton
            android:id="@+id/tiktokButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/social_icon_outline"
            android:contentDescription="TikTok"
            android:src="@drawable/ic_tiktok"
            android:tint="@color/text_primary" />

        <ImageButton
            android:id="@+id/snapchatButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/social_icon_outline"
            android:contentDescription="Snapchat"
            android:src="@drawable/ic_snapchat"
            android:tint="@color/text_primary" />
    </LinearLayout>

    <!-- Pages and Links Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <!-- Pages Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pages"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/termsLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:text="Terms and conditions"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/privacyLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:text="Privacy"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/cookiesLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:text="Cookies"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/modernSlaveryLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:text="Modern Slavery Statement"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <!-- Links Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Links"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/getHelpLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:text="Get help"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/addRestaurantLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:text="Add your restaurant"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/signupDeliverLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:text="Sign up to deliver"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/createBusinessLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:text="Create a business account"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>

